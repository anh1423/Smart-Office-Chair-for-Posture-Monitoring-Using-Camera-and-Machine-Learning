    {
        "id": "58e0f19554ed6b42",
        "type": "function",
        "z": "bcd8e516f5d135ee",
        "name": "Process Battery",
        "func": "// Parse if string\nlet data = msg.payload;\nif (typeof data === 'string') {\n    try {\n        data = JSON.parse(data);\n    } catch(e) {\n        node.error('Failed to parse JSON: ' + e.message);\n        return null;\n    }\n}\n\n// Validate\nif (!data || !data.voltage) {\n    node.error('Invalid data: ' + JSON.stringify(data));\n    return null;\n}\n\nconst voltage = parseFloat(data.voltage);\n\n// Calculate percentage\nconst minV = 3.0;\nconst maxV = 4.2;\nlet pct = ((voltage - minV) / (maxV - minV)) * 100;\npct = Math.max(0, Math.min(100, pct));\n\n// Determine level\nlet level = 'critical';\nif (pct > 75) level = 'high';\nelse if (pct > 50) level = 'medium';\nelse if (pct > 25) level = 'low';\n\n// Format for webserver (no status field)\nmsg.payload = {\n    voltage: voltage.toFixed(3),\n    percentage: pct.toFixed(1),\n    level: level,\n    timestamp: new Date().toISOString()\n};\n\nmsg.headers = {\n    'Content-Type': 'application/json'\n};\n\nnode.status({fill:\"green\",shape:\"dot\",text:`${voltage}V ${pct.toFixed(0)}%`});\n\nreturn msg;",
